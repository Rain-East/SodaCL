<Window x:Class="SodiumLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SodiumLauncher"
        mc:Ignorable="d"
        Title="SodiumLauncher" Height="450" Width="800" WindowStyle="None" AllowsTransparency="True" Background="Transparent" OpacityMask="White">
    <Grid>
        <Border BorderThickness="1" BorderBrush="Gray"  CornerRadius="15,15,15,15" MouseLeftButtonDown="Border_MouseLeftButtonDown"  >
            <Border.Background>
                <ImageBrush ImageSource=".\Resources\Launcher-Home.png"/>
            </Border.Background>
            <StackPanel Background="#B7E3E3E4" Margin="200,15,200,400" />

        </Border>
        <Button x:Name="Exit_Button" Content="X" Margin="752,15,10,400" Width="20" Background="#00DDDDDD" Foreground="White" Click="Exit_Button_Click" Height="26"/>

    </Grid>
</Window>
