<Window x:Class="Sodium_Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sodium_Launcher"
        mc:Ignorable="d"
        Title="Sodium_Launcher" Height="450" Width="800" WindowStyle="None" AllowsTransparency="True" Background="Transparent" OpacityMask="White">
    <Grid>
        <Border BorderThickness="1" BorderBrush="Gray"  CornerRadius="15,15,15,15" >
            <Border.Background>
                <ImageBrush ImageSource=".\Resources\Launcher-Home.png"/>
            </Border.Background>

        </Border>
        <Grid Margin="0,0,0,390" Height="50">
            <Border Margin="0,0,2,0" Height="50" MouseLeftButtonDown="Border_MouseLeftButtonDown" Background="Transparent"/>
            <Button x:Name="Exit_Button" Content="X" Margin="757,10,21,10" Width="20" Background="#00DDDDDD" Foreground="White" Click="Exit_Button_Click" BorderBrush="#00707070"/>
        </Grid>
    </Grid>
</Window>
