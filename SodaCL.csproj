<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>WinExe</OutputType>
		<TargetFramework>net6.0-windows</TargetFramework>
		<UseWPF>true</UseWPF>
		<ImplicitUsings>disable</ImplicitUsings>
		<Product>Soda Craft Launcher</Product>
		<AssemblyName>SodaCL</AssemblyName>
		<AssemblyTitle>Soda Craft Launcher 启动器</AssemblyTitle>
		<Description>一个清爽的 Minecraft 启动器</Description>
		<Version>0.0.4.2</Version>
		<FileVersion>0.0.4.2</FileVersion>
		<Copyright>Copyright © 2022 Soda Quantum Laboratory，All Rights Reserved.</Copyright>
		<ApplicationIcon>Resources\Images\Dev.ico</ApplicationIcon>
		<RootNamespace>SodaCL</RootNamespace>
		<Nullable>disable</Nullable>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
		<NoWarn>1701;1702;SYSLIB0014</NoWarn>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
		<NoWarn>1701;1702;SYSLIB0014</NoWarn>
	</PropertyGroup>

	<ItemGroup>
		<None Remove="Resources\Fonts\MiSans-Normal.ttf" />
		<None Remove="Resources\Fonts\MiSans-Regular.ttf" />
		<None Remove="Resources\Fonts\MiSans\MiSans-Bold.ttf" />
		<None Remove="Resources\Fonts\MiSans\MiSans-Medium.ttf" />
		<None Remove="Resources\Icons\Help.svg" />
		<None Remove="Resources\Icons\Information.svg" />
		<None Remove="Resources\Icons\Min.svg" />
		<None Remove="Resources\Icons\Settings.svg" />
		<None Remove="Resources\Images\Dev.ico" />
		<None Remove="Resources\Images\Launcher-Bg.jpg" />
		<None Remove="Resources\Images\Release.ico" />
		<None Remove="Resources\Icons\Close.svg" />
	</ItemGroup>

	<ItemGroup>
		<Resource Include="Resources\Fonts\MiSans\MiSans-Bold.ttf" />
		<Resource Include="Resources\Fonts\MiSans\MiSans-Medium.ttf" />
		<Resource Include="Resources\Icons\Help.svg" />
		<Resource Include="Resources\Icons\Information.svg" />
		<Resource Include="Resources\Icons\Min.svg" />
		<Resource Include="Resources\Icons\Settings.svg" />
		<Resource Include="Resources\Images\Dev.ico" />
		<Resource Include="Resources\Icons\Close.svg" />
		<Resource Include="Resources\Images\Launcher-Bg.jpg" />
		<Resource Include="Resources\Images\Release.ico" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Newtonsoft.Json.Schema" Version="3.0.14" />
		<PackageReference Include="SharpVectors.Wpf" Version="1.8.1" />
	</ItemGroup>

</Project>
